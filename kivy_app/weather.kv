<SplashScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: 50

        Image:
            source: 'assets/icon/clouds.png'
            allow_stretch: True
            keep_ratio: False

        Label:
            text: "Selamat Datang di Aplikasi Cuaca"
            font_size: 24
            color: 1,1,1,1
            size_hint_y: None
            height: 40

        Button:
            text: "Mulai"
            size_hint: (0.5, 0.2)
            pos_hint: {"center_x": 0.5}
            on_release:
                app.root.current = "home"

<HomeScreen>:
    location_input: location_input
    output_label: output_label
    loading_label: loading_label

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "Masukkan Lokasi (sesuai nama file model)"
            size_hint_y: None
            height: 30
            font_size: 16

        TextInput:
            id: location_input
            hint_text: "Contoh: Albany"
            size_hint_y: None
            height: 40
            multiline: False

        Button:
            text: "Cek Prediksi Cuaca"
            size_hint_y: None
            height: 40
            on_release: root.predict_weather()

        Label:
            id: loading_label
            text: ""
            color: 0.5, 0.5, 0.5, 1
            size_hint_y: None
            height: 30
            font_size: 14

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            Label:
                id: output_label
                text: ""
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                halign: "left"
                valign: "top"
                padding: 10, 10
                font_size: 16
