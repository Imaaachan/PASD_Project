<WeatherRoot>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    city_input: city_input
    result_label: result_label
    graph_layout: graph_layout

    TextInput:
        id: city_input
        hint_text: "Masukkan nama kota"
        multiline: False
        size_hint_y: None
        height: 40

    Button:
        text: "Cek Cuaca"
        size_hint_y: None
        height: 40
        on_press: app.cek_cuaca()

    Label:
        id: result_label
        text: ""
        size_hint_y: None
        height: 40

    ScrollView:
        do_scroll_x: False

        BoxLayout:
            id: graph_layout
            orientation: 'vertical'
            size_hint_y: None
            spacing: 10
            height: self.minimum_height
